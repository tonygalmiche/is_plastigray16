<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    
    <!-- Debloquer lot -->
    <record id="view_stock_lot_debloque_tree" model="ir.ui.view">
        <field name="name">report.stock.lot.debloque.tree</field>
        <field name="model">report.stock.lot.debloque</field>
        <field name="arch" type="xml">
            <tree string="Déloquer lots" create="false">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="mold"/>
                <field name="lot_id" />
                <field name="qty" sum="Total" />
                <field name="qty_par_uc" />
                <field name="qty_uc" sum="Total"/>
                <field name="in_date" />
                <field name="operation" invisible="1"/>
                <button string="Débloquer lot"
                        type="action"
                        name="%(action_is_gestion_lot)d"
                        icon="fa-list" />
                <button string="Mise au rebut"
                        type="action"
                        name="%(action_is_mise_rebut)d"
                        icon="terp-gtk-jump-to-ltr" />
           </tree>
        </field>
    </record>
    
    <record id="view_stock_lot_debloque_search" model="ir.ui.view">
        <field name="name">report.stock.lot.debloque.search</field>
        <field name="model">report.stock.lot.debloque</field>
        <field name="arch" type="xml">
            <search string="Débloquer lot">
                <field name="product_id" />
                <field name="mold" />
                <field name="lot_id" />
                <field name="location_id" />
                <group expand="1" string="Group By...">
                    <filter name="group_product" string="Article" icon="terp-accessories-archiver" context="{'group_by':'product_id'}"/>
                    <filter name="group_mold"  string="Moule  "        icon="terp-accessories-archiver" context="{'group_by':'mold'}"/>
                    <filter name="group_lot" string="Lot" icon="terp-accessories-archiver" context="{'group_by':'lot_id'}"/>
                    <filter name="group_location" string="Emplacement" icon="terp-accessories-archiver" context="{'group_by':'location_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_stock_lot_debloque_report" model="ir.actions.act_window">
        <field name="name">Débloquer lot</field>
        <field name="res_model">report.stock.lot.debloque</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{'operation': 'debloque'}</field>
        <field name="search_view_id" ref="view_stock_lot_debloque_search" />
    </record>
    <!--
    <menuitem action="action_stock_lot_debloque_report" 
              id="menu_action_stock_lot_debloque_report" 
              parent="menu_is_gestion_lot"
              sequence="2"
              groups="group_is_debloque_lot" />
    -->
</data>
</openerp>
