                <field name="partner_ref" position="after">
                    <field name="is_contact_id" domain="[('parent_id','=',partner_id)]" /> 
                    <field name="is_num_da" />
                    <field name="is_demandeur_id" />
                    <field name="pricelist_id"/>
                </field>
                <field name="incoterm_id" position="after">
                    <field name="is_lieu"/>
