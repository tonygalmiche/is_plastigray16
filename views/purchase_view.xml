            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="is_purchase_order_tree"/>
            <field name="domain">[('state','in',('draft','sent','to_approve'))]</field>  
        </record>
 



