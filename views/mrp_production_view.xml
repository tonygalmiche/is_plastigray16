        <!-- mrp.production -->
        <record model="ir.ui.view" id="is_mrp_production_form_view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_mark_done'][1]" position="before">
                    <button string="Fabriquer" name="fabriquer_action" type="object"/>
                </xpath>
                <field name="lot_producing_id" position="replace"/>
                <xpath expr="//button[@name='action_generate_serial']/.." position="after">
                    <field name="lot_producing_id" readonly="1"/>
                    <field name="is_prioritaire"/>
                    <field name="is_num_essai"/>
                    <field name="is_qt_fabriquee_uom"/>
                    <field name="is_qt_reste_uom"/>
                    <field name="is_qt_rebut_uom"/>
                </xpath>
                <xpath expr="//group[@name='group_extra_info']/field[@name='user_id']" position="after">
                    <field name="product_package"/>
                    <field name="package_qty"/>
                    <field name="is_qt_prevue"/>
                    <field name="is_qt_fabriquee"/>
                    <field name="is_qt_reste"/>
                    <field name="is_qt_rebut"/>
                    <field name="is_done" invisible="1"/>
                </xpath>




                <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="before">
                    <button type="object" name="access_stock_move_action" title="Accèder au mouvement de stock" icon="fa-search-plus"/>
                </xpath>
                <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='state']" position="replace">
                        <field 
                            name="state" 
                            force_save="1"
                            decoration-success="state in ('assigned')" 
                            decoration-warning="state == 'waiting'" 
                            decoration-info="state == 'draft'" 
                            decoration-danger="state == 'cancel'" 
                            decoration-muted="state == 'cancel'" 
                            optional="show" 
                            widget="badge" 
                            class="text-dark"
                        />
                </xpath>


                <xpath expr="//page[@name='components']" position="after">
                    <page string="Produits finis" name="pf">
                        <field name="move_finished_ids">
                            <tree>
                                <button type="object" name="access_stock_move_action" title="Accèder au mouvement de stock" icon="fa-search-plus"/>
                                <field name="product_id"/>
                                <field name="location_id"           optional="show"/>
                                <field name="location_dest_id"      optional="show"/>
                                <field name="date_deadline"         optional="hide"/>
                                <field name="date"                  optional="hide"/>
                                <field name="product_uom_qty"       optional="show"/>
                                <field name="reserved_availability" optional="show"/>
                                <field name="lot_ids" widget="many2many_tags" optional="hide"/>
                                <field 
                                    name="state" 
                                    force_save="1"
                                    decoration-success="state in ('assigned')" 
                                    decoration-warning="state in ('waiting','confirmed')" 
                                    decoration-info="state == 'draft'" 
                                    decoration-muted="state == 'cancel'" 
                                    optional="show" 
                                    widget="badge" 
                                    class="text-dark"
                                />
                                <!-- <field name="product_uom"      invisible="1"/>
                                <field name="propagate_cancel" invisible="1"/>
                                <field name="price_unit"       invisible="1"/>
                                <field name="company_id"       invisible="1"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <field name="name" invisible="1"/>
                                <field name="allowed_operation_ids" invisible="1"/>
                                <field name="unit_factor" invisible="1"/>
                                <field name="additional" invisible="1"/>
                                <field name="picking_type_id" invisible="1"/>
                                <field name="has_tracking" invisible="1"/>
                                <field name="operation_id" invisible="1"/>
                                <field name="is_done" invisible="1"/>
                                <field name="bom_line_id" invisible="1"/>
                                <field name="sequence" invisible="1"/>
                                <field name="warehouse_id" invisible="1"/>
                                <field name="is_locked" invisible="1"/>
                                <field name="move_lines_count" invisible="1"/>
                                <field name="should_consume_qty" invisible="1"/>
                                <field name="product_uom" attrs="{'readonly': [('state', '!=', 'draft'), ('id', '!=', False)]}" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom"/>
                                <field name="product_type" invisible="1"/>
                                <field name="product_qty" invisible="1" readonly="1"/>
                                <field name="reserved_availability" invisible="1"/>
                                <field name="forecast_expected_date" invisible="1"/>
                                <field name="forecast_availability" string="Reserved" attrs="{'column_invisible': [('parent.state', 'in', ('draft', 'done'))]}" widget="forecast_widget"/>
                                <field name="quantity_done" string="Consumed" class="o_manual_consumption" decoration-bf="not manual_consumption" decoration-success="not is_done and (quantity_done - should_consume_qty == 0)" decoration-warning="not is_done and (quantity_done - should_consume_qty &gt; 0.0001)" attrs="{'column_invisible': [('parent.state', '=', 'draft')], 'readonly': [('has_tracking', '!=','none')]}" force_save="1"/>
                                <field name="manual_consumption" invisible="1" force_save="1"/>
                                <field name="show_details_visible" invisible="1"/>
                                <field name="group_id" invisible="1"/>
                                <button name="action_show_details" type="object" title="Show Details" icon="fa-list" context="{'default_product_uom_qty': 0}" attrs="{'invisible': ['|', ('show_details_visible', '=', False), ('has_tracking', '=','none')]}" options="{&quot;warn&quot;: true}"/>
                                <button class="o_optional_button btn btn-light" name="action_show_details" type="object" title="Show Details" icon="fa-list" context="{'default_product_uom_qty': 0}" attrs="{'invisible': ['|', ('has_tracking', '!=','none'), ('show_details_visible', '=', False)]}" options="{&quot;warn&quot;: true}"/> -->
                            </tree>
                        </field>
                    </page>
                </xpath>



            </field>
        </record>

