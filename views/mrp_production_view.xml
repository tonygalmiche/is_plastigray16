                    <page string="Composants consommÃ©s">
                        <button type="object" name="voir_composants_consommes_action" string="Voir les composants consommÃ©s"/>
                        <field name="move_lines_composants_consommes">
                            <tree default_order="date desc, id" limit="200">
                                <button type="object" name="access_stock_move_action" title="AccÃ¨der au mouvement de stock" icon="fa-search-plus"/>
                                <field name="date"                  optional="show"/>
                                <field name="product_id" widget="many2one_clickable"/>
