<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Configuration des champs -->
        <record model="ir.ui.view" id="is_config_champ_tree_view">
            <field name="name">is.config.champ.tree</field>
            <field name="model">is.config.champ</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="afficher_onglet_cas"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="is_config_champ_form_view">
            <field name="name">is.config.champ.form</field>
            <field name="model">is.config.champ</field>
            <field name="arch" type="xml">
            <form>
                <sheet class="oe_form_sheet_width_wider">
                    <group>
                        <group string="Configuration des champs">
                            <field name="name" context="{'config_champ': 1}"  />
                        </group>
                    </group>
                    <field name="champs_line" nolabel="1"  context="{'model':name}">
                        <tree editable="bottom">
                            <field name="segment_id"  invisible="1"/>
                            <field name="name" domain="" context="{'config_champ': 1}" />
                            <field name="vsb"/>
                        </tree>
                    </field>
                    <group>
                        <field name="afficher_onglet_cas"/>
                    </group>
                </sheet>
            </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_config_champ_search_view" >
            <field name="name">is.config.champ.search</field>
            <field name="model">is.config.champ</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <record id="is_config_champ_action" model="ir.actions.act_window">
            <field name="name">Configuration des champs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">is.config.champ</field>
            <field name="view_mode">tree,form</field>
        </record>




        <!-- Segment -->
        <record id="is_product_segment_view_tree" model="ir.ui.view">
            <field name="name">is.product.segment.view.tree</field>
