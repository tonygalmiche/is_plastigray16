                    <field name="is_code_cas_vsb" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="is_mold_id_vsb" invisible="1"/>
                    <field name="is_mold_id" attrs="{'invisible': [('is_mold_id_vsb', '=', True)]}"/>
                    <field name="is_dossierf_id_vsb" invisible="1"/>
                    <field name="is_dossierf_id" attrs="{'invisible': [('is_dossierf_id_vsb', '=', True)]}"/>
                    <field name="is_ref_client_vsb" invisible="1"/>
                    <field name="is_ref_client" attrs="{'invisible': [('is_ref_client_vsb', '=', True)]}"/>
                    <field name="is_ref_fournisseur_vsb" invisible="1"/>
                    <field name="is_ref_fournisseur" attrs="{'invisible': [('is_ref_fournisseur_vsb', '=', True)]}"/>
                    <field name="is_origine_produit_id_vsb" invisible="1"/>
                    <field name="is_origine_produit_id" attrs="{'invisible': [('is_origine_produit_id_vsb', '=', True)]}"/>
                    <field name="is_dosmat_ctrl_qual"/>
                </xpath> 
                <!-- <xpath expr="//div[@class='oe_title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>              -->

                <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>   





               <xpath expr="//page[@name='sales']" position="after">
                    <page string="Fabrication">
                        <group colspan="4">
                              <group>
                                <field name="delai_cq_vsb" invisible="1"/>
                                <field name="delai_cq" attrs="{'invisible': [('delai_cq_vsb', '=', True)]}"/>
                                <field name="is_stock_secu_vsb" invisible="1"/>
                                <field name="is_stock_secu" attrs="{'invisible': [('is_stock_secu_vsb', '=', True)]}"/>
                                <field name="lot_mini_vsb" invisible="1"/>
                                <field name="lot_mini" attrs="{'invisible': [('lot_mini_vsb', '=', True)]}"/>
                                <field name="multiple_vsb" invisible="1"/>
                                <field name="multiple" attrs="{'invisible': [('multiple_vsb', '=', True)]}"/>
                                <field name="temps_realisation_vsb" invisible="1"/>
