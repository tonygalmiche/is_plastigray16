                    <field name="is_couleur_vsb" invisible="1"/>
                    <field name="is_couleur" attrs="{'invisible': [('is_couleur_vsb', '=', True)]}"/>
                    <field name="is_livraison_gefbox_vsb" invisible="1"/>
                    <field name="is_livraison_gefbox" attrs="{'invisible': [('is_livraison_gefbox_vsb', '=', True)]}"/>
