<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- is.commande.externe --> 
        <record model="ir.ui.view" id="is_commande_externe_form_view">
            <field name="name">is_commande_externe_form_view</field>
            <field name="model">is.commande.externe</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="commande"/>
                            <field name="commentaire"/> 
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_commande_externe_tree_view">
            <field name="name">is_commande_externe_tree_view</field>
            <field name="model">is.commande.externe</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="commande"/>
                    <field name="commentaire"/> 
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="is_commande_externe_search_view" >
            <field name="name">is_commande_externe_search_view</field>
            <field name="model">is.commande.externe</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="commande"/>
                    <field name="commentaire"/> 
                 </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_commande_externe_action">
            <field name="name">Commandes externes</field>
            <field name="res_model">is.commande.externe</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}
            </field>
        </record>
    </data>
</odoo>
