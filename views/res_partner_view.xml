<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- base.view_res_partner_filter --> 
       <record id="is_view_res_partner_filter" model="ir.ui.view">
            <field name="name">is_view_res_partner_filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                   <field name="is_code"/>
                   <field name="is_segment_achat"/>
                </field>
            </field>
        </record>

        <!-- base.view_partner_form --> 
        <record id="is_view_partner_form" model="ir.ui.view">
            <field name="name">is_view_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_database_line_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='street2']" position="after">
                    <field name="is_rue3" placeholder="Rue 3 ou Boite Postale" />
                </xpath>
                <xpath expr="//page[@name='sales_purchases']/group/group/field[@name='user_id']" position="after">
                    <field name="is_company"/>
                    <field name="customer"/>
                    <field name="supplier"/>
                    <field name="is_incoterm" />
                    <field name="is_achat_ville" groups="is_plastigray16.is_bon_achat_ville_grp"/>
                    <field name="is_lieu" />
                    <field 
                        name   = "is_transporteur_id" 
                        domain = "[('is_company', '=', True),('supplier','=', True)]" 
                        attrs  = "{'invisible': [('is_company', '=', False)]}"
                    />
                    <field 
                        name   = "is_mode_transport_id" 
                        attrs  = "{'invisible': [('is_company', '=', False)]}"
                    />
                    <field 
                        name   = "is_distance" 
                        attrs  = "{'invisible': [('is_company', '=', False)]}"
                    />
                    <field name="is_delai_transport" />
                    <field name="is_certificat_matiere"   attrs="{'invisible': [('customer','=', False)]}" />
                    
                    <field name="is_traitement_edi"       attrs="{'invisible': [('customer','=', False)]}" />
                    <field 
                        name="is_numero_bal_recepteur"
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')],'required': [('is_traitement_edi','=', 'DESADV')]}"
                    />
                    <field 
                        name="is_numero_identification_destinataire" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')],'required': [('is_traitement_edi','=', 'DESADV')]}"
                    />
                   <field 
                        name="is_numero_bal_emetteur" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')],'required': [('is_traitement_edi','=', 'DESADV')]}"
                    />
                   <field 
                        name="is_standard_edi" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')],'required': [('is_traitement_edi','=', 'DESADV')]}"
                    />
                   <field 
                        name="is_code_acheteur" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')]}"
                    />
                   <field 
                        name="is_code_expediteur" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')],'required': [('is_traitement_edi','=', 'DESADV')]}"
                    />
                   <field 
                        name="is_code_vendeur" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')],'required': [('is_traitement_edi','=', 'DESADV')]}"
                    />
                   <field 
                        name="is_code_destinataire" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')]}"
                    />
                   <field 
                        name="is_code_destinataire_agence" 
                        attrs="{'invisible': [('is_traitement_edi','!=', 'DESADV')]}"
                    />
                    <field name="is_import_function"      attrs="{'invisible': [('customer','=', False)]}"/>
                    <field name="is_identification_edi"   attrs="{'invisible': [('customer','=', False)]}"/>
                    <field name="is_type_cde_fournisseur" attrs="{'invisible': [('supplier','=', False)]}"/>
                    <field name="is_livre_a_id"           attrs="{'invisible': [('supplier','=', False)]}"/>
                    <field name="is_source_location_id" />
                </xpath>

                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute> 
                </xpath>
                <xpath expr="//field[@name='parent_id']/.." position="before">
                    <group>
                        <field name="name"               placeholder="Name" default_focus="1" />
                        <field name="is_raison_sociale2" placeholder="Raison sociale 2" attrs="{'invisible': [('is_company', '=', False)]}" />
                        <field name="is_code"            placeholder="Code"             attrs="{'required': [('is_company', '=', True)], 'invisible': [('is_company', '=', False)]}" />
                        <field name="is_adr_code"        placeholder="Code Adresse"     attrs="{'required': [('is_company', '=', True)], 'invisible': [('is_company', '=', False)]}"/> 
                    </group>   
                </xpath>
                <xpath expr="//field[@name='website']" position="before">
                    <field name="fax"                 attrs="{'invisible': [('is_company', '=', False)]}" />
                    <field name="is_adr_facturation"  attrs="{'invisible': [('is_company', '=', False)]}"  domain="[('is_company', '=', True),('customer','=', customer),('supplier','=',supplier)]" />
                    <field name="is_adr_groupe"       attrs="{'invisible': [('is_company', '=', False)]}" />
                    <field name="is_secteur_activite" attrs="{'invisible': [('is_company', '=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_company', '=', False)]}</attribute> 
                </xpath>
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute> 
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute> 
                </xpath>
                <xpath expr="//page[@name='sales_purchases']" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_company', '=', False)]}</attribute> 
                </xpath>
                <xpath expr="//page[@name='sales_purchases']" position="after"> 
                    <page name='is_calendar' string="Calendrier" attrs="{'invisible':[('is_company', '=', False)]}">
                        <field name="calendar_line">
                            <form string="Leaves">
                                <field name="reason" />
                                <field name="date_from" />
                                <field name="date_to" />
                            </form>
                            <tree string="Leaves" editable="bottom">
                                <field name="reason" />
                                <field name="date_from" />
                                <field name="date_to" />
                            </tree>
                        </field>
                        <separator string="Closing days"/>
                        <group>
                            <field name="close_monday" />
                            <field name="close_tuesday" />
                            <field name="close_wednesday" />
                            <field name="close_thursday" />
                            <field name="close_friday" />
                            <field name="close_saturday" />
                            <field name="close_sunday" />
                        </group>
                        <group>
                            <field name="is_horizon_besoins"/>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//page[@name='contact_addresses']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
                </xpath>
                <xpath expr="//page[@name='contact_addresses']" position="after">
                    <page string="Les contacts" attrs="{'invisible': [('is_company','=',False), ('child_ids', '=', [])]}" autofocus="autofocus">
                        <field name="child_ids"  mode="tree" context="{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_supplier': supplier, 'default_customer': customer, 'default_use_parent_address': True}">
                            <tree editable="bottom">
                                <button 
                                    string="Fiche du contact" 
                                    name= "action_view_partner" type="object" icon="fa-search-plus"
                                />
                                <field name="name"/>
                                <field name="is_type_contact"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="email"/>
                                <field name="is_database_line_ids" widget="many2many_tags"/>
                            </tree>
                        </field>
                    </page>
                    <page name="is_identification" string="Identification" attrs="{'invisible': ['|',('is_company', '=', False),('supplier','=', False)]}">
                        <group>
                            <field name="is_segment_achat"     on_change="onchange_segment_id(is_segment_achat)"/>
                            <field name="is_famille_achat_ids" context="{'default_segment_id':is_segment_achat}" widget="many2many_tags" />
                            <field name="is_fournisseur_imp"/>
                            <field name="is_fournisseur_da_fg"/>
                            <field name="is_site_livre_ids" widget="many2many_tags" />
                        </group>
                        <group string="Conditions Logistiques">
                            <field name="is_groupage"/>
                            <field name="is_tolerance_quantite"/>
                            <field name="is_transmission_cde"/>
                        </group>
                        <group>
                            <group>
                                <field name="is_tolerance_delai" />
                            </group>
                            <group>
                                <field name="is_nb_jours_tolerance" attrs="{'invisible': [('is_tolerance_delai', '=', False)]}" />
                            </group>
                        </group>
                    </page>
                    <page name="is_qualite" string="Qualité" attrs="{'invisible': ['|',('is_company', '=', False),('supplier','=', False)]}">
                        <group>
                            <field name="is_certifications"  colspan="2">
                                <form string="Certification qualité">
                                    <group>
                                        <field name="is_norme" />
                                        <field name="is_date_validation" />
                                        <field name="is_certificat_ids"  widget="many2many_binary"/>
                                        <field name="partner_id" invisible="1"/>
                                    </group>
                                </form>
                                <tree string="Certification qualité">
                                    <field name="is_norme" />
                                    <field name="is_date_validation" />
                                    <field name="is_certificat_ids"  widget="many2many_binary"/>
                                    <field name="partner_id" invisible="1"/>                                 
                                </tree>
                            </field>
    
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="is_product_view_partner_property_form" model="ir.ui.view">
            <field name="name">is_product_view_partner_property_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="product.view_partner_property_form" />
            <field name="arch" type="xml">
                <field name="property_product_pricelist" position="attributes">
                    <attribute name="groups">base.group_user</attribute> 
                </field>
                <field name="property_product_pricelist" position="after">
                    <field name="pricelist_purchase_id"/>
                </field>
            </field>
        </record>
        <record id="is_account_view_partner_property_form" model="ir.ui.view">
            <field name="name">is_account_view_partner_property_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form" />
            <field name="arch" type="xml">
                <field name="property_payment_term_id" position="attributes">
                    <attribute name="invisible">True</attribute> 
                </field>
                <field name="property_supplier_payment_term_id" position="attributes">
                    <attribute name="invisible">True</attribute> 
                </field>
                <group name="fiscal_information" position="attributes">
                    <attribute name="invisible">True</attribute> 
                </group>
                <group name="accounting_entries" position="attributes">
                    <attribute name="invisible">True</attribute> 
                </group>
                <field name="show_credit_limit" position="after">
                    <group>
                        <field name="property_account_position_id" options="{'no_create': True, 'no_open': True}"/>
                        <field 
                            name="is_num_autorisation_tva" 
                            attrs="{'invisible': ['|','|',
                                ('is_company', '=', False),
                                ('customer','!=', True),
                                ('property_account_position_id', '!=', 5 )
                            ]}" 
                        /> 
                    </group>
                    <group>
                        <group string="Achats">
                            <field name="property_account_payable_id"/>
                            <field string="Conditions de paiement fournisseur" name="property_supplier_payment_term_id" options="{'no_open': True, 'no_create': True}" groups="account.group_account_invoice,account.group_account_readonly"/>
                            <field name="is_type_reglement"      attrs="{'invisible': [('is_company', '=', False)]}" />
                            <field name="is_num_siret"           attrs="{'invisible': ['|',('is_company', '=', False),('supplier','!=', True)]}" />
                            <field name="is_code_client"         attrs="{'invisible': ['|',('is_company', '=', False),('supplier','!=', True)]}" />
                            <field name="property_purchase_currency_id" options="{'no_create': True, 'no_open': True}" groups='base.group_multi_currency'/>
                        </group>
                        <group string="Ventes">
                            <field name="property_account_receivable_id"/>
                            <field string="Conditions de paiement client" name="property_payment_term_id" options="{'no_open': True, 'no_create': True}" groups="account.group_account_invoice,account.group_account_readonly"/>
                            <field name="is_cofor" attrs="{'invisible': [('customer', '!=', True)] }"/>
                            <field name="is_escompte" />
                            <field name="is_champ_obligatoire_id"            attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_caracteristique_liste_a_servir"  attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_caracteristique_bl"              attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_configuration_bl_id"             attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_configuration_facture"           attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_vendeur_id"                      attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_mode_envoi_facture"              attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_rib_id"                          attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                            <field name="is_adr_liv_sur_facture"             attrs="{'invisible': ['|',('is_company', '=', False),('customer','!=', True)]}" />
                        </group>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </field>
            </field>
        </record>
        <record id="is_purchase_view_partner_property_form" model="ir.ui.view">
            <field name="name">is_view_partner_property_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="purchase.view_partner_property_form" />
            <field name="arch" type="xml">
                <field name="property_purchase_currency_id" position="attributes">
                    <attribute name="invisible">True</attribute> 
                </field>
            </field>
        </record>


        <!-- Liste des clients -->
        <record id="is_view_partner_tree" model="ir.ui.view">
            <field name="name">is_view_partner_tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="display_name" position="after">
                    <field name="is_code"     optional="show"/>
                    <field name="is_adr_code" optional="show"/>
                </field>
                <field name="email" position="after">
                    <field name="is_type_contact"        optional="hide"/>
                </field>
                <field name="active" position="after">
                    <field name="is_mode_transport_id"       optional="hide"/>
                    <field name="property_product_pricelist" optional="hide"/>
                    <field name="pricelist_purchase_id"      optional="hide"/>
                    <field name="is_database_origine_id"     optional="hide"/>
                </field>
            </field>
        </record>
        <record id="res_partner_client_action" model="ir.actions.act_window">
            <field name="name">Clients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="domain">[('customer','=',True),('is_company','=',True)]</field>
        </record>
        <record id="is_action_partner_supplier_form" model="ir.actions.act_window">
            <field name="name">Sociétés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="domain">['|',('id','=',1),('is_adr_code','=','EXP')]</field>
        </record>


        <!-- Liste des fournisseurs -->
        <record id="fournisseur_tree_view" model="ir.ui.view">
            <field name="name">fournisseur_tree_view</field>
            <field name="model">res.partner</field>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="is_code"/>
                    <field name="is_adr_code"/>
                    <field name="is_segment_achat" optional="show"/>
                    <field name="is_famille_achat_ids" widget="many2many_tags" optional="show"/>
                    <field name="city" optional="show"/>
                    <field name="zip" optional="show"/>
                    <field name="is_type_cde_fournisseur" optional="show"/>
                    <field 
                        name="property_product_pricelist"  
                        widget="many2one_clickable"
                        groups="is_plastigray16.is_gestionnaire_donnees_techniques_group"
                        optional="hide"
                    />
                    <field 
                        name="pricelist_purchase_id"  
                        widget="many2one_clickable"
                        groups="is_plastigray16.is_gestionnaire_donnees_techniques_group"
                        optional="hide"
                    />
                    <field 
                        name="is_database_origine_id" 
                        groups="is_plastigray16.is_gestionnaire_donnees_techniques_group"
                        optional="hide"
                    />
                </tree>
            </field>
        </record>
        <record id="fournisseur_action" model="ir.actions.act_window">
            <field name="name">Fournisseurs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_id" ref="fournisseur_tree_view"/>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('supplier','=',True),('is_company','=',True)]</field>
            <field name="context">{}</field>
            <field name="filter" eval="True"/>
        </record>



        <!-- Secteur d'activité -->
        <record model="ir.ui.view" id="is_secteur_activite_tree_view">
            <field name="name">is_secteur_activite_tree_view</field>
            <field name="model">is.secteur.activite</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="tree" editable="top">
                    <field name="name"/>
                    <field name="commentaire"/>
                    <field name="is_database_origine_id" optional="hide"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_secteur_activite_action">
            <field name="name">Secteur d'activité</field>
            <field name="res_model">is.secteur.activite</field>
            <field name="view_mode">tree</field>
        </record>


        <!-- Type de contact -->
        <record model="ir.ui.view" id="is_type_contact_tree_view">
            <field name="name">is_type_contact_tree_view</field>
            <field name="model">is.type.contact</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="tree" editable="top">
                    <field name="name"/>
                    <field name="commentaire"/>
                    <field name="is_database_origine_id" optional="hide"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_type_contact_action">
            <field name="name">Type de contact</field>
            <field name="res_model">is.type.contact</field>
            <field name="view_mode">tree</field>
        </record>




        <!-- Taux d'escompte -->
        <record model="ir.ui.view" id="is_escompte_tree_view">
            <field name="name">is_escompte_tree_view</field>
            <field name="model">is.escompte</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="tree" editable="top">
                    <field name="name"/>
                    <field name="taux"/>
                    <field name="compte"/>
                    <field name="is_database_origine_id" optional="hide"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_escompte_action">
            <field name="name">Escompte</field>
            <field name="res_model">is.escompte</field>
            <field name="view_mode">tree</field>
        </record>


        <!-- is.mode.transport -->
        <record model="ir.ui.view" id="is_mode_transport_tree_view">
            <field name="name">is_mode_transport_tree_view</field>
            <field name="model">is.mode.transport</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="tree" editable="top">
                    <field name="name"/>
                    <field name="is_database_origine_id" optional="hide"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_mode_transport_action">
            <field name="name">Mode de transport</field>
            <field name="res_model">is.mode.transport</field>
            <field name="view_mode">tree</field>
        </record>


        <!-- Segment d'achat -->
        <record id="view_is_segment_achat_tree" model="ir.ui.view">
            <field name="name">is.segment.achat.tree</field>
            <field name="model">is.segment.achat</field>
            <field name="arch" type="xml">
                <tree string="Segment d'achat">
                    <field name="name"/>
                    <field name="is_database_origine_id" optional="hide"/>
                </tree>
            </field>
        </record>
        <record id="view_is_segment_achat_form" model="ir.ui.view">
            <field name="name">is.segment.achat.form</field>
            <field name="model">is.segment.achat</field>
            <field name="arch" type="xml">
                <form string="Segment d'achat">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="family_line">
                                <tree string="Familles" editable="bottom">
                                    <field name="name" />
                                    <field name="segment_id" required="0" invisible="1" />
                                </tree>
                            </field>
                            <field name="description" placeholder="Commentaire ..."/>
                      </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_is_segment_achat" model="ir.actions.act_window">
            <field name="name">Segment d'achat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">is.segment.achat</field>
            <field name="view_mode">tree,form</field>
        </record>
        
                
        <!-- Famille d'achat -->
        <record id="view_is_famille_achat_tree" model="ir.ui.view">
            <field name="name">is.famille.achat.tree</field>
            <field name="model">is.famille.achat</field>
            <field name="arch" type="xml">
                <tree string="Famille d'achat">
                    <field name="name" />
                    <field name="segment_id" />
                    <field name="is_database_origine_id" optional="hide"/>
                </tree>
