            <field name="res_model">stock.picking</field>
            <field name="domain">[
                    ('picking_type_id','=', 2),
                    ('state','=', 'done'),
                    ('is_mode_envoi_facture','in', [False,'courrier','courrier2','mail','mail2','mail_client','mail_client_bl'])
