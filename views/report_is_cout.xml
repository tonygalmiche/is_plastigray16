<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_is_cout_style">
            .header {
                font-size:11pt;
            }
            .footer {
                font-size:10pt;
            }
            .page {
                font-size:10pt;
            }
            .titre {
                font-size:13pt;
                font-weight: bold;
            }
            h2 {
                font-size:12pt;
            }

        </template>

        <template id="report_is_cout_layout" inherit_id="web.layout" primary="True">
            <!-- Add report attributes -->
            <xpath expr="//html" position="attributes">
                <attribute name="t-att-data-report-margin-top">data_report_margin_top if data_report_margin_top else None</attribute>
                <attribute name="t-att-data-report-header-spacing">data_report_header_spacing if data_report_header_spacing else None</attribute>
                <attribute name="t-att-data-report-dpi">data_report_dpi if data_report_dpi else None</attribute>
            </xpath>
            <!-- Add report style -->
            <xpath expr="//head" position="inside">
                <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
                <link href="/website/static/src/css/website.css" rel="stylesheet"/>
                <link href="/web/static/lib/fontawesome/css/font-awesome.css" rel="stylesheet"/>
                <style type="text/css">
                    <t t-call="report.style"/>
                    <t t-call="is_plastigray.report_is_cout_style"/>
                </style>
            </xpath>
            <!-- Remove conflicting style -->
            <xpath expr="//head/link[@href='/web/static/src/css/full.css']" position="replace"></xpath>
        </template>

        <template id="report_is_cout_html_container">
            <t t-set="body_classname" t-value="'container'"/>
            <t t-call="is_plastigray.report_is_cout_layout">
                <t t-raw="0"/>
            </t>
        </template>

        <!-- Entête personnalisé Plastigray -->
        <template id="report_is_cout_external_layout_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="titre">
                            <span>Coût article </span>
                            <span style="font-size:12pt;" t-field="o.name"/>
                        </div>
                        <div>du <t t-usertime="%d/%m/%Y"/> à <t t-usertime="%H"/>H</div>
                    </div>
                </div>
            </div>
        </template>

        <!-- Pied de page personnalisé Plastigray -->
        <template id="report_is_cout_external_layout_footer">
            <div class="footer">
                <div style="border-top: 1px solid black">
                    <table style="width:100%">
                        <tr>
                            <td class="text-left" style="width:90%">
                            </td>
                            <td class="text-right">
                                Page <span class="page" style="font-size:10pt;"/> / <span class="topage"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
        </template>

        <!-- Squelette de la page personnalisé pour Plastigray -->
        <template id="report_is_cout_external_layout">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="is_plastigray.report_is_cout_external_layout_header"/>
            <t t-raw="0"/>
            <t t-call="is_plastigray.report_is_cout_external_layout_footer"/>
        </template>

        <template id="report_is_cout_document">
            <t t-call="is_plastigray.report_is_cout_external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-5">
                            <div class="row"><span class="col-xs-6">Calcul des coûts </span><span class="col-xs-6" t-field="o.cout_calcul_id" /></div>
                            <div class="row"><span class="col-xs-6">Type d'article   </span><span class="col-xs-6" t-field="o.type_article" /></div>
                            <div class="row"><span class="col-xs-6">Catégorie        </span><span class="col-xs-6" t-field="o.is_category_id" /></div>
                            <div class="row"><span class="col-xs-6">Gestionnaire     </span><span class="col-xs-6" t-field="o.is_gestionnaire_id" /></div>
                        </div>
                        <div class="col-xs-2"/>
                        <div class="col-xs-5">
                            <div class="row"><span class="col-xs-6">Moule            </span><span class="col-xs-6" t-field="o.is_mold_id" /></div>
                            <div class="row"><span class="col-xs-6">Unité            </span><span class="col-xs-6" t-field="o.uom_id" /></div>
                            <div class="row"><span class="col-xs-6">Lot d'appro.     </span><span class="col-xs-6" t-field="o.lot_mini" /></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5">
                            <div class="row"><h2>Coût standard</h2></div>
                            <div class="row"><span class="col-xs-6">Coût std matière               </span><span class="col-xs-6 text-right" t-field="o.cout_std_matiere" /></div>
                            <div class="row"><span class="col-xs-6">Coût std conditionnement       </span><span class="col-xs-6 text-right" t-field="o.cout_std_condition" /></div>
                            <div class="row"><span class="col-xs-6">Coût std machine               </span><span class="col-xs-6 text-right" t-field="o.cout_std_machine" /></div>
                            <div class="row"><span class="col-xs-6">Coût std main d'oeuvre         </span><span class="col-xs-6 text-right" t-field="o.cout_std_mo" /></div>
                            <div class="row"><span class="col-xs-6">Coût std sous-traitance        </span><span class="col-xs-6 text-right" t-field="o.cout_std_st" /></div>
                            <div class="row"><span class="col-xs-6">Coût std Total                 </span><span class="col-xs-6 text-right" t-field="o.cout_std_total" /></div>
                            <div class="row"><span class="col-xs-6">Prix de vente standard         </span><span class="col-xs-6 text-right" t-field="o.cout_std_prix_vente" /></div>
                            <!--<div class="row"><span class="col-xs-6">Surcout Présérie               </span><span class="col-xs-6 text-right" t-field="o.cout_std_preserie" /></div>-->
                            <!--<div class="row"><span class="col-xs-6">Amortissement moule            </span><span class="col-xs-6 text-right" t-field="o.cout_std_amtmoule" /></div>-->
                            <!--<div class="row"><span class="col-xs-6">Prix de vente tarif commercial </span><span class="col-xs-6 text-right" t-field="o.cout_prix_vente" /></div>-->
                        </div>
                        <div class="col-xs-2"/>
                        <div class="col-xs-5">
                            <h2>Coût actualisé</h2>
                            <div class="row"><span class="col-xs-6">Coût act matière         </span><span class="col-xs-6 text-right" t-field="o.cout_act_matiere" /></div>
                            <div class="row"><span class="col-xs-6">Coût act conditionnement </span><span class="col-xs-6 text-right" t-field="o.cout_act_condition" /></div>
                            <div class="row"><span class="col-xs-6">Coût act machine         </span><span class="col-xs-6 text-right" t-field="o.cout_act_machine" /></div>
                            <div class="row"><span class="col-xs-6">Coût act main d'oeuvre   </span><span class="col-xs-6 text-right" t-field="o.cout_act_mo" /></div>
                            <div class="row"><span class="col-xs-6">Coût act sous-traitance  </span><span class="col-xs-6 text-right" t-field="o.cout_act_st" /></div>
                            <div class="row"><span class="col-xs-6">Coût act Total           </span><span class="col-xs-6 text-right" t-field="o.cout_act_total" /></div>
                        </div>
                    </div>
                    <div class="row">
                        <h2>Nomenclature</h2>
                        <div class="col-xs-12">
                            <table class="table table-condensed">
                                <thead>
                                    <tr >
                                        <th class="text-left"  style="vertical-align:top">Composant</th>
                                        <th class="text-left"  style="vertical-align:top">Désignation</th>
                                        <th class="text-left" style="vertical-align:top">Unité</th>
                                        <th class="text-right" style="vertical-align:top">Quantité</th>
                                        <th class="text-right" style="vertical-align:top">Coût Mat</th>
                                        <th class="text-right" style="vertical-align:top">Total Mat</th>
                                        <th class="text-right" style="vertical-align:top">Coût ST</th>
                                        <th class="text-right" style="vertical-align:top">Total ST</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.nomenclature_ids" t-as="l">
                                        <td class="text-left"> <span t-field="l.composant"/> </td>
                                        <td class="text-left"> <span t-field="l.designation"/>  </td>
                                        <td class="text-left"> <span t-field="l.unite"/>  </td>
                                        <td class="text-right nowrap"><t t-esc='"{:,.4f}".format(l.quantite).replace(","," ").replace(".",",")'/></td>
                                        <td class="text-right nowrap"><t t-esc='"{:,.4f}".format(l.cout_mat).replace(","," ").replace(".",",")'/></td>
                                        <td class="text-right nowrap"><t t-esc='"{:,.4f}".format(l.total_mat).replace(","," ").replace(".",",")'/></td>
                                        <td class="text-right nowrap"><t t-esc='"{:,.4f}".format(l.cout_st).replace(","," ").replace(".",",")'/></td>
                                        <td class="text-right nowrap"><t t-esc='"{:,.4f}".format(l.total_st).replace(","," ").replace(".",",")'/></td>
                                     </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row">
                        <h2>Coût Machine</h2>
                        <div class="col-xs-12">
                            <table class="table table-condensed">
                                <thead>
                                    <tr >
                                        <th class="text-left"  style="vertical-align:top">Composant</th>
                                        <th class="text-left"  style="vertical-align:top">N°</th>
                                        <th class="text-left"  style="vertical-align:top">Poste de charges</th>
                                        <th class="text-right"  style="vertical-align:top">Quantité</th>
                                        <th class="text-right"  style="vertical-align:top">Coût Préparation</th>
                                        <th class="text-right"  style="vertical-align:top">Tps Préparation (H)</th>
                                        <th class="text-right"  style="vertical-align:top">Coût Fabrication</th>
                                        <th class="text-right"  style="vertical-align:top">Tps Fabrication (s)</th>
                                        <th class="text-right"  style="vertical-align:top">Coût Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.gamme_ma_ids" t-as="l">
                                        <td class="text-left"> <span t-field="l.composant"/> </td>
                                        <td class="text-left"> <span t-field="l.sequence"/> </td>
                                        <td class="text-left"> <span t-field="l.workcenter_id"/> </td>
                                        <td class="text-right"> <span t-field="l.quantite"/> </td>
                                        <td class="text-right"> <span t-field="l.cout_prepa"/> </td>
                                        <td class="text-right"> <span t-field="l.tps_prepa"/> </td>
                                        <td class="text-right"> <span t-field="l.cout_fab"/> </td>
                                        <td class="text-right"> <span t-field="l.tps_fab"/> </td>
                                        <td class="text-right"> <span t-field="l.cout_total"/> </td>
                                     </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <h2>Coût main d'oeuvre</h2>
                        <div class="col-xs-12">
                            <table class="table table-condensed">
                                <thead>
                                    <tr >
                                        <th class="text-left"  style="vertical-align:top">Composant</th>
                                        <th class="text-left"  style="vertical-align:top">N°</th>
                                        <th class="text-left"  style="vertical-align:top">Poste de charges</th>
                                        <th class="text-right"  style="vertical-align:top">Quantité</th>
                                        <th class="text-right"  style="vertical-align:top">Coût Préparation</th>
                                        <th class="text-right"  style="vertical-align:top">Tps Préparation (H)</th>
                                        <th class="text-right"  style="vertical-align:top">Coût Fabrication</th>
                                        <th class="text-right"  style="vertical-align:top">Tps Fabrication (s)</th>
                                        <th class="text-right"  style="vertical-align:top">Coût Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.gamme_mo_ids" t-as="l">
                                        <td class="text-left"> <span t-field="l.composant"/> </td>
                                        <td class="text-left"> <span t-field="l.sequence"/> </td>
                                        <td class="text-left"> <span t-field="l.workcenter_id"/> </td>
                                        <td class="text-right"> <span t-field="l.quantite"/> </td>
                                        <td class="text-right"> <span t-field="l.cout_prepa"/> </td>
                                        <td class="text-right"> <span t-field="l.tps_prepa"/> </td>
                                        <td class="text-right"> <span t-field="l.cout_fab"/> </td>
                                        <td class="text-right"> <span t-field="l.tps_fab"/> </td>
                                        <td class="text-right"> <span t-field="l.cout_total"/> </td>
                                     </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </template>


        <template id="report_is_cout">
            <t t-call="is_plastigray.report_is_cout_html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="is_plastigray.report_is_cout_document" />
                </t>
            </t>
        </template>
    </data>
</openerp>
